{
  "name": "nextjs-14-tutorial",
  "version": "0.1.12",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "release": "standard-version && prettier --write CHANGELOG.md",
    "prepare": "husky"
  },
  "dependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "husky": "^9.1.7",
    "next": "15.1.0",
    "prettier": "^3.4.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "@types/node": "^22.10.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9",
    "eslint-config-next": "15.1.0",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "lint-staged": "^15.2.11",
    "postcss": "^8",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "standard-version": {
    "skip": {
      "tag": true
    },
    "types": [
      {
        "type": "feat",
        "section": "New Feature"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "doc",
        "section": "Documentation"
      },
      {
        "type": "style",
        "section": "Style Changes"
      },
      {
        "type": "refactor",
        "section": "Refactor"
      },
      {
        "type": "perf",
        "section": "Performance"
      },
      {
        "type": "test",
        "section": "Tests"
      },
      {
        "type": "build",
        "section": "Build System"
      },
      {
        "type": "ci",
        "section": "CI/CD Configurations"
      },
      {
        "type": "chore",
        "section": "Maintenance"
      },
      {
        "type": "revert",
        "section": "Revert"
      }
    ]
  },
  "engines": {
    "node": ">20.0.0"
  }
}
